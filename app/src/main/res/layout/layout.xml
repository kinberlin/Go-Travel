<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Otpvalide"
    android:background="@color/hicolor">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/header_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/logo"
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="85dp"
                android:layout_marginStart="85dp"
                android:gravity="center_vertical"
                android:src="@drawable/logo"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/terms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/logo"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="30dp"
                android:text="Verifaction of the digit Code"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/imgcontent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/header_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:textSize="13sp"
                android:text="Ckeck it in your messages App"
                android:textAlignment="center"
                android:textColor="@color/white"/>

            <LinearLayout
                android:id="@+id/infoCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/description"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp">




                <EditText
                    android:id="@+id/dgc1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/colortext"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:background="@drawable/bg_otpval"/>

                <EditText
                    android:id="@+id/dgc2"
                    android:layout_marginStart="5dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="8dp"
                    android:textColor="@color/colortext"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:background="@drawable/bg_otpval"/>

                <EditText
                    android:id="@+id/dgc3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="5dp"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:maxLength="1"
                    android:textColor="@color/colortext"
                    android:textAlignment="center"
                    android:inputType="number"
                    android:background="@drawable/bg_otpval"/>

                <EditText
                    android:id="@+id/dgc4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/colortext"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:inputType="number"
                    android:maxLength="1"
                    android:background="@drawable/bg_otpval"
                    android:textAlignment="center"/>

                <EditText
                    android:id="@+id/dgc5"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="5dp"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/colortext"
                    android:textAlignment="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:background="@drawable/bg_otpval"/>

                <EditText
                    android:id="@+id/dgc6"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="5dp"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/colortext"
                    android:textAlignment="center"
                    android:inputType="number"
                    android:background="@drawable/bg_otpval"/>

            </LinearLayout>

            <Button
                android:id="@+id/btnOTP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/infoCode"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="90dp"
                android:layout_marginTop="56dp"
                android:layout_marginEnd="90dp"
                android:text="Confirm"
                android:textAlignment="center"
                android:background="@drawable/btn_otp">

            </Button>


        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>