<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

  <LinearLayout
      android:id="@+id/container_hours"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="6dp"
      android:layout_marginEnd="6dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      android:orientation="horizontal">

      <RelativeLayout
          android:layout_width="280dp"
          android:layout_height="wrap_content"
          android:layout_marginBottom="20dp">

          <TextView
              android:id="@+id/heure_depart_t"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="20dp"
              android:fontFamily="@font/roboto_bold"
              android:text="9:59"
              android:textColor="@color/black"
              android:textSize="19sp" />

          <TextView
              android:id="@+id/agence_depart_t"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/heure_depart_t"
              android:layout_marginStart="20dp"
              android:fontFamily="@font/roboto_bold"
              android:text="Buca sadi"
              android:textColor="@color/black"
              android:textSize="19sp" />


          <TextView
              android:id="@+id/heure_arrive_t"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentEnd="true"
              android:layout_marginEnd="55dp"
              android:fontFamily="@font/roboto_bold"
              android:text="13:45"
              android:textColor="@color/black"
              android:textSize="19sp" />


          <TextView
              android:id="@+id/agence_arrive_t"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/heure_arrive_t"
              android:layout_alignParentEnd="true"
              android:layout_marginEnd="55dp"
              android:fontFamily="@font/roboto_bold"
              android:text="Buca Bastos"
              android:textColor="@color/black"
              android:textSize="19sp" />


          <TextView
              android:id="@+id/price_trajet_t"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/agence_arrive_t"
              android:layout_alignParentStart="true"
              android:layout_marginStart="20dp"
              android:fontFamily="@font/roboto_bold"
              android:text="2000$"
              android:textColor="@color/Price_color"
              android:textSize="19sp" />


          <TextView
              android:id="@+id/class_bus_t"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/price_trajet_t"
              android:layout_alignParentStart="true"
              android:layout_marginStart="20dp"
              android:fontFamily="@font/roboto_bold"
              android:text="VIP"
              android:textColor="@color/Price_color"
              android:textSize="19sp" />

          <TextView
              android:id="@+id/nbr_place_bus_t"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/class_bus_t"
              android:layout_alignParentStart="true"
              android:layout_marginStart="20dp"
              android:fontFamily="@font/roboto_bold"
              android:text="35 places"
              android:textColor="@color/Price_color"
              android:textSize="19sp" />

      </RelativeLayout>

      <Button
          android:id="@+id/start_reservation_t"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:background="@drawable/bg_input_reservation"
          android:text="Ouvert"
          android:textColor="@color/white" />

  </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>