<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

  <LinearLayout
      android:id="@+id/container_hours"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="6dp"
      android:layout_marginEnd="6dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      android:orientation="horizontal">

      <RelativeLayout
          android:layout_width="280dp"
          android:layout_height="100dp"
          android:layout_marginBottom="20dp">
<TextView
    android:id="@+id/heure_depart"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="9:59"
    android:fontFamily="@font/roboto_bold"
    android:layout_marginStart="20dp"
    android:textSize="19sp"
    android:textColor="@color/black"/>

          <TextView
              android:id="@+id/agence_depart"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/heure_depart"
              android:text="Buca sadi"
              android:fontFamily="@font/roboto_bold"
              android:textSize="19sp"
              android:layout_marginStart="20dp"
              android:textColor="@color/black"/>


          <TextView
              android:id="@+id/heure_arrive"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentEnd="true"
              android:layout_marginEnd="55dp"
              android:text="13:45"
              android:fontFamily="@font/roboto_bold"
              android:textSize="19sp"
              android:textColor="@color/black"/>


          <TextView
              android:id="@+id/agence_arrive"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginEnd="55dp"
              android:layout_below="@id/heure_arrive"
              android:layout_alignParentEnd="true"
              android:text="Buca Bastos"
              android:fontFamily="@font/roboto_bold"
              android:textSize="19sp"
              android:textColor="@color/black"/>


          <TextView
              android:id="@+id/price_trajet"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="20dp"
              android:layout_below="@id/agence_arrive"
              android:layout_alignParentStart="true"
              android:text="2000$"
              android:fontFamily="@font/roboto_bold"
              android:textSize="19sp"
              android:textColor="@color/Price_color"/>


          <TextView
              android:id="@+id/class_bus"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="20dp"
              android:layout_below="@id/price_trajet"
              android:layout_alignParentStart="true"
              android:text="VIP"
              android:fontFamily="@font/roboto_bold"
              android:textSize="19sp"
              android:textColor="@color/Price_color"/>

      </RelativeLayout>
      <Button
          android:id="@+id/start_reservation"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Book now"
          android:textColor="@color/white"
          android:background="@drawable/bg_input_reservation"
          android:layout_marginTop="20dp"/>

  </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>